<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black">

        <TextView
            android:id="@+id/textView15"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:padding="20dp"
            android:text="Get in touch with us"
            android:textAllCaps="true"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/gold"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView15"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:padding="20dp"
            android:text="Call us 1800-102-4444 \n[9am to 9 pm Monday to Saturday]"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/grey_text_color" />

        <TextView
            android:id="@+id/textView12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView11"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:padding="20dp"
            android:text="SMS US SERVICE at 56677"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/grey_text_color" />

        <TextView
            android:id="@+id/textView43"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView12"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:padding="20dp"
            android:text="Write to us \nservice@bharti-axalife.com or send a letter to the nearest bharti axa life branch"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/grey_text_color" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/textView43"
            android:gravity="center">

            <ImageButton
                android:id="@+id/ibFb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:padding="10dp"
                android:src="@drawable/facebook" />

            <ImageButton
                android:id="@+id/ibTwitter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/ibFb"
                android:background="@android:color/transparent"
                android:padding="10dp"
                android:src="@drawable/twitter" />

            <ImageButton
                android:id="@+id/ibLinkedin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/ibTwitter"
                android:background="@android:color/transparent"
                android:padding="10dp"
                android:src="@drawable/linkedin" />

            <ImageButton
                android:id="@+id/ibYouTube"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/ibLinkedin"
                android:background="@android:color/transparent"
                android:padding="10dp"
                android:src="@drawable/youtube" />
        </RelativeLayout>


    </RelativeLayout>
</ScrollView>